    <script>
        function purchase(key, yesNo, price, numberFieldId){
            console.log('key', key)
            console.log('yesNo', yesNo)
            console.log('price', price)

            let strNum = document.getElementById(numberFieldId).value.toString()

            let requestData = {betId: key, yesNo, price, number: strNum}

            // Make the fetch request
            fetch('/yesno/addYesNoBid', {
                method: 'POST',            // HTTP method
                headers: {
                    'Content-Type': 'application/json'  // Tell the server we're sending JSON data
                },
                body: JSON.stringify(requestData)    // Convert the object to JSON string
            })
            .then(response => response.json())  // Parse the JSON response from the server
            .then(data => {
                if(data.success){
                    toast('Submitted bid successfully!')
                }else{
                    toast('Bid failed due to reason: ' + data.reason)
                }
                console.log('Success:', data);    // Handle the success response
            })
            .catch(error => {
                console.error('Error:', error);   // Handle any errors
            });
        }

        // Function to show the toast
        function toast(text) {
            const toast = document.getElementById('toast');
            
            toast.innerHTML = text

            // Add 'show' class to make the toast visible
            toast.classList.add('show');

            // Automatically hide the toast after 3 seconds
            setTimeout(() => {
                toast.classList.remove('show');
            }, 3000); // Toast disappears after 3 seconds
        }

        let currentPopupKey = ''

        function openDialog(key, yesprice, noprice){
            const overlay = document.getElementById('overlay');
            overlay.classList.add('show')

            currentPopupKey = key
            document.getElementById('yesbidprice').value = yesprice
            document.getElementById('nobidprice').value = noprice
        }

        // Function to close the popup overlay
        function closePopup() {
            const overlay = document.getElementById('overlay');
            overlay.classList.remove('show')
        }
    </script>

